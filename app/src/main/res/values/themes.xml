<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Base.Theme.TravelDiary" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>


    <style name="Theme.TravelDiary" parent="Base.Theme.TravelDiary">

        <item name="android:fontFamily">@font/gotham_book</item>
        <item name="android:statusBarColor">@android:color/transparent</item>


    </style>

    <style name="Theme.TravelDiary.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TravelDiary.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TravelDiary.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="CustomSnackbar" parent="Widget.Design.Snackbar">
        <item name="android:background">@color/custom_snackbar_background</item>
    </style>

    <style name="RoundedImageViewShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50dp</item>
    </style>

    <style name="CircularImageViewShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>


    <!-- res/values/styles.xml -->
    <style name="CustomToolbarTitleText">
        <item name="android:fontFamily">@font/gotham_medium</item>
        <item name="android:textSize">22sp</item>
        <!-- Add other text-related style attributes as needed -->
    </style>


    <!-- res/values/styles.xml -->
    <style name="AppTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundMode">filled</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/gotham_book</item>
    </style>



</resources>